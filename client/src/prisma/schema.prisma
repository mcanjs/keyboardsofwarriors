generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Admin {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  isAdmin Boolean
}

model Matches {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  loserId   String
  matchDate DateTime        @db.Date
  matchLog  Json?
  users     String[]
  winnerId  String
}

model Premium {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  isPremium Boolean
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  adminId   String @db.ObjectId
  email     String @unique
  lose      BigInt
  password  String
  premiumId String @db.ObjectId
  queueBan  String
  rank      BigInt
  username  String @unique
  win       BigInt
}
