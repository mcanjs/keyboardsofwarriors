generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url = env("DATABASE_URL")
}

model Matches {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  matchDate String
  result    Boolean
  User      User?   @relation(fields: [userId], references: [id])
  userId    String? @db.ObjectId
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  win           Int
  lose          Int
  rank          Int
  password      String
  queuePosition String
  matches       Matches[]
}
